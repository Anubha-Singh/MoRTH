<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:elevation="200dp"
    android:orientation="vertical"
    app:cardBackgroundColor="#00AFF0"
    app:cardCornerRadius="3dp"
    tools:context=".EnterTenderDetailsActivity">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            android:elevation="200dp"
            android:orientation="vertical"
            app:cardCornerRadius="8dp">

            <TextView
                android:id="@+id/TenderIdtextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="12dp"
                android:gravity="center"
                android:text="Tender Id"
                android:textColor="#000000"
                android:textSize="20sp" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            android:elevation="200dp"
            android:orientation="vertical"
            app:cardCornerRadius="8dp">

            <EditText
                android:id="@+id/RegisteredName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="12dp"
                android:gravity="center"
                android:hint="Enter Registered Name"
                android:textColor="#000000"
                android:textSize="20sp" />

        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="7dp"
                android:layout_weight="0.5"
                android:elevation="200dp"
                android:orientation="vertical"
                app:cardCornerRadius="8dp">

                <TextView
                    android:id="@+id/startDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="25dp"
                    android:gravity="center"
                    android:text="Start date of project"
                    android:textColor="#000000"
                    android:textSize="20sp" />

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="7dp"
                android:layout_weight="0.5"
                android:elevation="200dp"
                android:orientation="vertical"
                app:cardCornerRadius="8dp">

                <TextView
                    android:id="@+id/enddate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="25dp"
                    android:gravity="center"
                    android:text="End Date Of Project"
                    android:textColor="#000000"
                    android:textSize="20sp" />

            </android.support.v7.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="7dp"
                android:layout_weight="0.5"
                android:elevation="200dp"
                android:orientation="vertical"
                app:cardCornerRadius="8dp">

                <TextView
                    android:id="@+id/startPlace"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="25dp"
                    android:gravity="center"
                    android:text="Start Location"
                    android:textColor="#000000"
                    android:textSize="20sp" />

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="7dp"
                android:layout_weight="0.5"
                android:elevation="200dp"
                android:orientation="vertical"
                app:cardCornerRadius="8dp">

                <TextView
                    android:id="@+id/endPlace"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="25dp"
                    android:gravity="center"
                    android:text="End Location"
                    android:textColor="#000000"
                    android:textSize="20sp" />

            </android.support.v7.widget.CardView>

        </LinearLayout>

        <Button
            android:id="@+id/nextHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="120dp"
            android:background="@drawable/custom_linear_layout_border"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:text="Register"
            android:textColor="#000000"
            android:textSize="25dp" />

    </LinearLayout>
</android.support.v7.widget.CardView>