<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".WeatherHindranceActivity">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".WeatherHindranceActivity">

        <LinearLayout
            android:id="@+id/locationLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/locationLayout"
                android:layout_alignTop="@+id/locationLayout"
                android:layout_alignParentTop="true"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Your Location"
                android:paddingLeft="40dp"
                android:textSize="20sp" />

            <Button
                android:id="@+id/getLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GPS" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_weight="50"
                android:gravity="center"
                android:hint="Start Date"
                android:inputType="textPersonName"
                android:textSize="20sp"

                />


            <TextView
                android:id="@+id/enddate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:gravity="center"
                android:hint="end date"
                android:inputType="textPersonName"
                android:text="End Date"
                android:textSize="20sp"
                tools:layout_editor_absoluteX="213dp"
                tools:layout_editor_absoluteY="72dp" />

        </LinearLayout>


        <Spinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_marginTop="20dp"
            android:padding="10dp"


            />

        <EditText
            android:id="@+id/reason"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginTop="22dp"
            android:ems="10"
            android:hint="Other Reasons"
            android:inputType="textPersonName"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/select_file"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="16dp"
            android:text="Select Files"
            android:textSize="24sp"
            android:visibility="visible" />

        <ImageButton
            android:id="@+id/select_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@android:drawable/screen_background_light_transparent"
            android:padding="16dp"
            android:paddingTop="8dp"
            android:scaleType="fitCenter"
            android:src="@drawable/upload_btn"
            android:text="Select" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/upload_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

        </android.support.v7.widget.RecyclerView>

        <Button
            android:id="@+id/save"
            android:layout_width="148dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center"
            android:layout_marginTop="90dp"
            android:text="save" />

        <Button
            android:id="@+id/Extension"
            android:layout_width="148dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="20dp"
            android:text="Extension" />


    </LinearLayout>
</ScrollView>
